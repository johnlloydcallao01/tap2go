{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "NODE_ENV",
    "JWT_SECRET",
    "NEXT_TELEMETRY_DISABLED"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**", "lib/**", "*.tsbuildinfo"],
      "env": [
        "NODE_VERSION",
        "NEXT_TELEMETRY_DISABLED",
        "NODE_ENV",
        "CI",
        "VERCEL",
        "VERCEL_URL",
        "VERCEL_ENV",
        "DATABASE_URI",
        "PAYLOAD_SECRET"
      ],
      "passThroughEnv": [
        "DATABASE_URI",
        "PAYLOAD_SECRET"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "passThroughEnv": ["*"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": ["eslint-report.json"],
      "env": ["NODE_VERSION", "NEXT_TELEMETRY_DISABLED", "NODE_ENV"]
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": ["*.tsbuildinfo"],
      "env": ["NODE_VERSION", "NEXT_TELEMETRY_DISABLED", "NODE_ENV"]
    },

    "clean": {
      "cache": false
    },
    "ios": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "android": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    }
  }
}
